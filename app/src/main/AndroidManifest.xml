<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="before.forget">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher3"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round3"
        android:supportsRtl="true"
        android:theme="@style/Theme.Beforeget"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".feature.myrecord.detail.DetailActivity"
            android:exported="false" />
        <activity
            android:name=".feature.write.WriteAddItemActivity"
            android:exported="true" />
        <activity
            android:name=".feature.myrecord.detail.MyRecordDetailActivity"
            android:exported="false" />
        <activity
            android:name=".feature.write.WriteActivity"
            android:exported="true" />
        <activity
            android:name=".feature.write.MediaSelectActivity"
            android:exported="true" />
        <activity
            android:name=".feature.myrecord.MyRecordActivity"
            android:exported="true" />
        <activity
            android:name=".feature.report.ReportActivity"
            android:exported="true" />
        <activity
            android:name=".feature.main.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>