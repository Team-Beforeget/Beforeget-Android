<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Beforeget" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black200</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black200</item>
        <item name="android:includeFontPadding">false</item>
    </style>


    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="fontFamily">@font/pretendard_semibold</item>
        <item name="android:textSize">16sp</item>

    </style>



    <style name="Pretendard.Body.1_Medium_17.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">17dp</item>
        <item name="android:lineSpacingExtra">8dp</item>
        <item name="colorControlActivated">@color/black200</item>
        <item name="colorControlNormal">@color/gray300</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:paddingEnd">34dp</item>
        <item name="android:textColor">@color/black200</item>
        <item name="android:textColorHint">@color/gray200</item>
    </style>
</resources>