<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_sentence_front_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_img_sentence" />

    <TextView
        android:id="@+id/tv_sentence_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sentence_type1"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:fontFamily="@font/ppneuemachina_regular"
        app:layout_constraintBottom_toBottomOf="@+id/iv_sentence_front_bg"
        app:layout_constraintEnd_toEndOf="@+id/iv_sentence_front_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>