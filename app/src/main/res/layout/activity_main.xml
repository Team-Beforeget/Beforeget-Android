<?xml version="1.0" encoding="utf-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Background"
        tools:context="beforeget.feature.MainActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_main_top"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/rectangle_undercorner"
            android:elevation="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:context=".Feature.MainActivity">

            <ImageView
                android:id="@+id/iv_beforeget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="49dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_icn_logo_main" />

            <ImageView
                android:id="@+id/iv_stats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="49dp"
                android:layout_marginEnd="3dp"
                app:layout_constraintEnd_toStartOf="@+id/iv_setting"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_btn_stats" />

            <ImageView
                android:id="@+id/iv_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="49dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_btn_setting" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_main_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_main_label">

                <TextView
                    android:id="@+id/tv_main_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineHeight="16dp"
                    android:text="OO "
                    android:textColor="@color/black200"
                    android:textSize="14dp"
                    android:textStyle="normal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_main_sublabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:lineHeight="16dp"
                    android:text="님, 잊기 전에 기록해보세요."
                    android:textColor="@color/black200"
                    android:textSize="14dp"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tv_main_name"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_main_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:lineHeight="34dp"
                android:text="오늘은 어떤 미디어를\n감상하셨나요?"
                android:textColor="@color/black200"
                android:textSize="23dp"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView4" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_main_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="44dp"
                android:layout_marginBottom="34dp"
                android:background="@drawable/rectangle_fill_green"
                android:gravity="center"
                android:lineHeight="20dp"
                android:paddingLeft="45dp"
                android:paddingTop="13dp"
                android:paddingRight="45dp"
                android:paddingBottom="13dp"
                android:text="기록하기"
                android:textColor="@color/black200"
                android:textSize="17dp"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cl_main_text" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="73dp"
                android:layout_height="76dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_beforeget"
                tools:srcCompat="@tools:sample/avatars" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_main_reportlabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="26dp"
            android:lineHeight="23dp"
            android:text="기록"
            android:textColor="@color/black200"
            android:textSize="19dp"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl_main_top" />

        <TextView
            android:id="@+id/tv_main_countlabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:text="N개"
            android:textStyle="normal"
            android:textSize="19dp"
            android:lineHeight="23dp"
            android:textColor="@color/gray200"
            app:layout_constraintStart_toEndOf="@+id/tv_main_reportlabel"
            app:layout_constraintTop_toTopOf="@+id/tv_main_reportlabel" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_main_bottom"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_main_btnall"
        tools:itemCount="6"
        tools:listitem="@layout/item_content_list" />

        <TextView
            android:id="@+id/tv_main_btnall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rectangle_fill_transparent"
            android:gravity="center"
            android:lineHeight="12dp"
            android:paddingLeft="13dp"
            android:paddingTop="6dp"
            android:paddingRight="14dp"
            android:paddingBottom="6dp"
            android:text="전체보기"
            android:textColor="@color/black200"
            android:textSize="13dp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl_main_top" />

    </androidx.constraintlayout.widget.ConstraintLayout>
